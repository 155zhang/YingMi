<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="200dp">
    <ImageView
        android:id="@+id/item_theme_bg_image"
        android:src="@mipmap/item_theme_commodity_bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView

        android:src="@mipmap/home_pic_themeblack"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <LinearLayout
        android:layout_alignBottom="@id/item_theme_bg_image"
        android:id="@+id/ll"
        android:layout_above="@id/triangle"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/item_theme_icon_img"
            android:src="@mipmap/item_theme_icon"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/item_theme_username_text"
            android:layout_gravity="center_vertical"
            android:text="用户名"
            android:textColor="@color/white"
            android:textSize="@dimen/text_font_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_above="@id/ll"
        android:maxLines="1"
        android:text="的撒赖看见了奖励空间"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/text_font_medium"
        android:id="@+id/item_theme_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>